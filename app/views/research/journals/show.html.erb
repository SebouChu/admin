<% content_for :title, @journal %>

<div class="row">
  <div class="col-md-8">
    <h1><%= @journal %></h1>
    <p><%= @journal.description %></p>
  </div>
</div>

<div class="row">
  <% @journal.volumes.each do |volume| %>
    <div class="col-md-3">
      <%= render volume %>
    </div>
  <% end %>
</div>
