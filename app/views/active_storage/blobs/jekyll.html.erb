<%
width, height = @blob.metadata.values_at('width', 'height')
ratio = width.present? && height.present? ? (width.to_f / height.to_f) : nil
%>
<%# TODO: Replace @blob.url with the media endpoint when it's ready %>
<%= {
  "name" => @blob.filename.to_s,
  "size" => @blob.byte_size,
  "width" => width,
  "height" => height,
  "ratio" => ratio,
  "url" => @blob.url
}.compact.to_yaml %>
