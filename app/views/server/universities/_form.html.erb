<%= simple_form_for [:server, university] do |f| %>
  <div class="row">
    <div class="col-md-4">
      <%= f.input :name %>
      <%= f.input :identifier %>
      <%= f.input :private %>
      <%= f.input :sms_sender_name %>
    </div>
    <div class="col-md-4">
      <%= f.input :address %>
      <div class="row">
        <div class="col-md-4">
          <%= f.input :zipcode %>
        </div>
        <div class="col-md-8">
          <%= f.input :city %>
        </div>
      </div>
      <%= f.input :country %>
    </div>
    <div class="col-md-4">
      <%= f.input :logo,
                  as: :single_deletable_file,
                  input_html: { accept: '.jpg,.jpeg,.png,.svg' },
                  preview: 200,
                  direct_upload: true %>
    </div>
  </div>
  <% content_for :action_bar_right do %>
    <%= submit f %>
  <% end %>
<% end %>
