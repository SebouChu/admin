<%= simple_form_for [:admin, user] do |f| %>
  <div class="row">
    <div class="col-md-4">
      <%= f.input :email %>
      <%#= f.input :role %>
      <%= f.association :language, include_blank: false %>
    </div>
    <div class="col-md-4">
      <%= f.input :first_name %>
      <%= f.input :last_name %>
    </div>
    <div class="col-md-4">
      <%= f.input :picture %>
    </div>
  </div>
  <% content_for :buttons do %>
    <%= submit f %>
  <% end %>
<% end %>
