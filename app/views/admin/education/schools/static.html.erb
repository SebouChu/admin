---
<% administrator_involvements = @school.involvements_through_roles.includes(:person).ordered_by_name %>
name: >
  <%= @school.name %>
address: >
  <%= @school.address %>
zipcode: >
  <%= @school.zipcode %>
city: >
  <%= @school.city %>
country: >
  <%= ISO3166::Country[@school.country].translations[@school.country.downcase] %>
phone: >
  <%= @school.phone %>
<% if administrator_involvements.any? %>
administrators:
<% administrator_involvements.each do |involvement| %>
  - "<%= involvement.person.slug %>"
<% end %>
administrators_description:
<% administrator_involvements.each do |involvement| %>
  "<%= involvement.person.slug %>": >
    <%= involvement.target.to_s %>
<% end %>
roles:
<% @school.university_roles.ordered.each do |role| %>
  - title: >
      <%= role.to_s %>
    persons:
    <% role.involvements.includes(:person).ordered.each do |involvement| %>
      - "<%= involvement.person.slug %>"
    <% end %>
<% end %>
<% else %>
roles: []
<% end %>
---
