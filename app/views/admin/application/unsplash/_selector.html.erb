<% unless image.attached? %>
  <p>Voulez-vous utiliser une de ces images Unsplash ?</p>
  <div class="row">
    <% Unsplash::Photo.search(text, 1, 4, :squarish).each do |photo| %>
      <div class="col-6">
        <%= render 'admin/application/unsplash/photo', photo: photo %>
      </div>
    <% end %>
  </div>
<% end %>
<button type="button"
        class="btn btn-secondary btn-sm"
        data-bs-toggle="modal"
        data-bs-target="#unsplashModal">
  Chercher une autre image sur Unsplash
</button>
<input  class="form-control string optional"
        type="hidden"
        value=""
        name="unsplash"
        id="unsplashInput">
<div  class="modal fade"
      id="unsplashModal"
      tabindex="-1"
      aria-labelledby="Unsplash"
      aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Recherche d'image sur Unsplash</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form class="row">
          <div class="col-lg-9">
            <input  type="text"
                    name="search"
                    value="<%= text %>"
                    class="form-control">
          </div>
          <div class="col-lg-3">
            <button type="button"
                    class="btn btn-primary btn-sm"
                    aria-label="Chercher">
              Chercher
            </button>
          </div>
        </form>
        <div class="row">
          <% Unsplash::Photo.search(text, 1, 18, :squarish).each do |photo| %>
            <div class="col-6 col-lg-2">
              <%= render 'admin/application/unsplash/photo', photo: photo %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
