title: >
  <%= @about.to_s %>
external_domains:
<% @website.external_domains.each do |domain| %>
  - "<%= domain %>"
<% end %>
social:
<% 
[
  :email, 
  :mastodon, 
  :peertube, 
  :x, 
  :github, 
  :linkedin, 
  :youtube, 
  :vimeo, 
  :instagram, 
  :facebook, 
  :tiktok
].each do |network| 
  value = @website.send "social_#{network}"
  next if value.blank?
%>
  <%= network %>: >-
    <%= value %>
<% end %>