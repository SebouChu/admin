<section class="mb-5">
  <div class="float-end">
    <%= link_to t('create'),
                new_admin_communication_website_page_path(website_id: @website),
                class: button_classes if can?(:create, Communication::Website::Page) %>
  </div>
  <h2 class="h3"><%= t('communication.website.last_pages') %></h2>
  <p><%= link_to  t('communication.website.see_all', number: @website.pages.accessible_by(current_ability).count),
                  admin_communication_website_pages_path(website_id: @website) %></p>
  <%= render 'admin/communication/websites/pages/list', pages: @pages %>
</section>
