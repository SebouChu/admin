<% 
connected = @extranet.connected?(about)
path = toggle_admin_communication_extranet_contacts_path(
  extranet_id: @extranet.id,
  objectId: about.id,
  objectType: about.class, 
  connection: connected ? 'disconnect' : 'connect'
)
%>
<%= form_tag path, remote: true do %>
  <input  class="form-check-input"
          type="checkbox"
          id="checkbox-<%= about.id %>"
          onchange="this.form.submit()" 
          <% if connected %> checked<% end %>>
  <label  class="form-check-label" 
          for="checkbox-<%= about.id %>">
    <%= Communication::Extranet::Connection.human_attribute_name 'connected' %>
  </label>
<% end %>
