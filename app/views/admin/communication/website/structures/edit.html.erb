                        input_html: {
                          class: 'js-slug-input',
                          data: { source: '#communication_website_structure_communication_posts_title' }
                        } %>
            <hr class="my-5">
            <%= f.input :education_programs_title %>
            <%= f.input :education_programs_description %>
