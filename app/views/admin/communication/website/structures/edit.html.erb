            <%= f.input :research_articles_description %>
            <%= f.input :research_articles_path,
                        input_html: {
                          class: 'js-slug-input',
                          data: { source: '#communication_website_structure_research_articles_title' }
                        } %>
            <hr class="my-5">
            <%= f.input :research_volumes_title %>
            <%= f.input :research_volumes_description %>
            <%= f.input :research_volumes_path,
                        input_html: {
                          class: 'js-slug-input',
                          data: { source: '#communication_website_structure_research_volumes_title' }
                        } %>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card flex-fill w-100">
          <div class="card-body">
            <%= f.input :persons_title %>
            <%= f.input :persons_description %>
