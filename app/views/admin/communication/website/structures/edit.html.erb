                          class: 'js-slug-input',
                          data: { source: '#communication_website_structure_researchers_title' }
                        } %>
            <hr class="my-5">
            <%= f.input :teachers_title %>
            <%= f.input :teachers_description %>
            <%= f.input :teachers_path,
                        input_html: {
                          class: 'js-slug-input',
                          data: { source: '#communication_website_structure_teachers_title' }
                        } %>
          </div>
        </div>
      </div>
    </div>
    <% content_for :action_bar_right do %>
      <%= submit f %>
    <% end %>
  <% end %>
<% end %>
