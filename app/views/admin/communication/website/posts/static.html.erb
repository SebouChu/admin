---
title: "<%= @about.title %>"
date: <%= @about.published_at %> UTC
slug: "<%= @about.slug %>"
<% if @about.pinned %>
weight: 1
<% end %>
<% if @about.author %>
authors:
  - "<%= @about.author.slug %>"
<% end %>
<% if @about.categories.any? %>
categories:
  <% @about.categories.each do |category| %>
  - "<%= category.path %>/"
  <% end %>
<% end %>
<% if @about.featured_image.attached? %>
image: "<%= @about.featured_image.blob.id %>"
image_alt: "<%= @about.featured_image_alt %>"
<% end %>
description: >
  <%= prepare_text_for_static @about.description %>
---
<%= prepare_html_for_static @about.text, @about.university %>
