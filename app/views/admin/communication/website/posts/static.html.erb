---
title: "<%= @about.title %>"
date: "<%= @about.published_at.iso8601 %>"
slug: "<%= @about.slug %>"
<% if @about.pinned %>
weight: 1
<% end %>
<% if @about.author %>
authors:
  - "<%= @about.author.slug %>"
<% end %>
<% if @about.categories.any? %>
categories:
  <% @about.categories.each do |category| %>
  - "<%= category.path %>"
  <% end %>
<% end %>
<% if @about.featured_image.attached? %>
image:
  id: "<%= @about.featured_image.blob.id %>"
  alt: "<%= @about.featured_image_alt %>"
  credit: >
    <%= prepare_html_for_static @about.featured_image_credit, @about.university %>
<% end %>
description: >
  <%= prepare_text_for_static @about.description %>
description_short: >
  <%= prepare_text_for_static @about.description_short %>
---
<%= prepare_html_for_static @about.text, @about.university %>
