<%
class_name = "block block-license"
unless block.title.blank?
  class_name += " block-with-title"
end
%>
<div class="<%= class_name %>">
  <div class="container">
    <div class="block-content">
      <% unless block.title.blank? %>
        <div class="top">
          <p class="block-title"><%= block.title %></p>
        </div>
      <% end %>
      <a href="<%= render 'admin/communication/blocks/templates/license/creative_commons/url', block: block %>" target="_blank" rel="noreferrer">
        <%= render 'admin/communication/blocks/templates/license/creative_commons/badge', block: block %>
      </a>
    </div>
  </div>
</div>
