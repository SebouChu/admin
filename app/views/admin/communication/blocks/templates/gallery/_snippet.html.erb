<% block.template.elements.first(4).each do |element| %>
  <%
  component = element.image_component
  blob = component.blob
  next unless blob
  image = blob.representable?  ? blob.representation(resize: 'x180')
                               : blob
  %>
  <%= kamifusen_tag image, height: 90, alt: '', class: 'me-2' %>
<% end %>
