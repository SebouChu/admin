<%
$class = "block block-image"

unless @block.title.blank?
  $class += " block-with-title"
end
%>
<section class="<%= $class %>">
  <div class="container">
    <div class="block-content">
      <% unless @block.title.blank? %>
        <div class="top">
          <h2><%= @block.title %></h2>
        </div>
      <% end %>
      <% if @block.template.image %>
        <%= block_component_preview :image %>
      <% end %>
    </div>
  </div>
</section>