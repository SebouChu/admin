<% if @block.data %>

  <% if @block.template.layout ===  "list" %>
    
    <ul>
      <% @block.template.elements.each do |element| %>
        <li>
          <%= element %>
        </li>
      <% end %>
    </ul>

  <% elsif @block.template.layout ===  "cards" %>

    <div class="cards">
      <% @block.template.elements.each do |element| %>
        <article class="card">
          <%= element %>
        </article>
      <% end %>
    </div>

  <% else %>

    <div class="grid">
      <% @block.template.elements.each do |element| %>
        <article>
          <%= element %>
        </article>
      <% end %>
    </div>

  <% end %>
<% end %>
