<%= simple_form_for [:admin, volume] do |f| %>
  <div class="row">
    <div class="col-md-8">
      <div class="card flex-fill w-100">
        <div class="card-header">
          <h5 class="card-title mb-0">Content</h5>
        </div>
        <div class="card-body">
          <%= f.input :title %>
          <%= f.input :cover %>
          <%= f.input :description, input_html: { rows: 10 } %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card flex-fill w-100">
        <div class="card-header">
          <h5 class="card-title mb-0">Metadata</h5>
        </div>
        <div class="card-body">
          <%= f.input :number %>
          <%= f.input :published_at, html5: true %>
          <%= f.input :keywords %>
        </div>
      </div>
    </div>
  </div>
  <% content_for :buttons do %>
    <%= submit f %>
  <% end %>
<% end %>
