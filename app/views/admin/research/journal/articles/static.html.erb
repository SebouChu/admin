---
title: "<%= @about.title %>"
slug: "<%= @about.slug %>"
description: >
  <%= prepare_text_for_static @about.abstract %>
<% if @about.volume && @about.volume.path %>
volumes:
  - "<%= @about.volume.path %>"
<% end %>
weight: <%= @about.position %>
date: <%= @about.published_at %> UTC
<% if @about.pdf.attached? %>
pdf: "<%= @about.pdf.blob_id %>"
<% end %>
keywords: >
  <%= @about.keywords %>
researchers:
<% @about.people.each do |person| %>
- "<%= person.slug %>"
<% end %>
abstract: "<%= @about.abstract %>"
references: "<%= @about.references %>"
---
<%= prepare_html_for_static @about.text, @about.university %>
