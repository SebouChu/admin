title: >
  <%= @person.to_s %>
slug: "<%= @person.slug %>"
first_name: "<%= @person.first_name %>"
last_name: "<%= @person.last_name %>"
phone: "<%= @person.phone %>"
email: "<%= @person.email %>"
roles:
