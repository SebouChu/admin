<%= simple_form_for :contacts, url: contacts_search_path, method: :get do |f| %>
  <div class="row g-3">
    <div class="col">
      <input  class="form-control form-control-lg" 
              placeholder="<%= t 'extranet.contacts.search.placeholder' %>"
              type="text"
              name="term"
              value="<%= @term %>">
    </div>
    <div class="col-auto">
      <input type="submit" value="<%= t 'extranet.contacts.search.submit' %>" class="btn btn-primary btn-lg">
    </div>
  </div>
<% end %>
